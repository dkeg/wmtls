## sxhkd keybinds
## dkeg 2015

## reload sxhkd
mod4 + Escape
  pkill -USR1 -x sxhkd

## kill the session
mod4 + ctrl + q 
  pkill xinit 

## kill active window
alt + q 
	killw $(pfw)
	#xdo close $(pfw)

## general 
alt + p
   popstat	

#mod4 + Return
#  xterm 

alt + Return
  urxvt

mod4 + p 
  demon	

alt + {_,shift +}b
  {vimb,firefox}
  sleep 3 && xdotool key "mod4 + shift + 2" $(pfw)

alt + n
  leafpad

alt + d
  popper ' ' $(date  +'%R'), $(date +' %b %d')

alt + shift + d
  wallblur

## manipulating
# move windows	
mod4 + {h, j, k, l}
	wmv {-20 0, 0 20, 0 -20, 20 0} $(pfw)
	#wmv {-10 0, 0 10, 0 -10, 10 0} $(pfw)

# fast move windows
mod4 + ctrl + {h, j, k, l}
	wmv {-80 0, 0 80, 0 -80, 80 0} $(pfw)

# split 2 windows
mod4 + s
  split $(pfw)

# switchgrid
mod4 + shift + t
  sgrd  $(pfw)

# resize windows
mod4 + shift + {h, j, k, l} 
	wrs {-20 0, 0 20, 0 -20, 20 0} $(pfw)

# fast resize windows
mod4 + ctrl + shift + {h, j, k, l} 
	wrs {-40 0, 0 40, 0 -40, 40 0} $(pfw)

## cycling
alt + {h,j,k,l}
  clst {h,j,k,l}

## grouping
# add
mod4 + shift + {1,2,3,4}
  grps -s $(pfw) {1,2,3,4}

# toggle
mod4 + {1,2,3,4}
  grps -t {1,2,3,4}

# remove
mod4 + slash 
  grps -c $(pfw) all

## move windos with mouse
mod4 + !button{1,3}
  {wmv,wrs} -a %i %i $(pfw)

## window placement 
mod4 + {y,u,b,n,g}
  corner {tl,tr,bl,br,md} $(pfw)

## maximize and fullscreen (like cwm) 
alt + {_,shift + }f
  max -{m,f} $(pfw)

mod4 {_,shift + }f
  max -p $(pfw)

## max horizontal and vertical like (cwm and 2bwm)
alt + {_,shift +}m
  max -{v,h} $(pfw)

## compton toggle
alt + {_,shift + }c
  ~/bin/comp {more,less} 

## scratchpad
alt + w 
  mapw -t $(more ~/.scratch)

## volume 
alt + shift + {equal,minus,F8} 
  ~/bin/volume {+,-,!}; \
    popper $(~/bin/volume level)

## music
mod4 + shift + equal
  ~/bin/music +; \
  popper '' $(~/bin/music artist)

mod4 + shift + minus
  ~/bin/music -; \
  popper '' $(~/bin/music artist)

mod4 + shift + Home
  ~/bin/music play; \
  popper '' $(~/bin/music title)
  #popper %\{c\} '' $(~/bin/music title)

mod4 + shift + ctrl + Home
  ~/bin/music pause; \
  popper '' $(~/bin/music title)
